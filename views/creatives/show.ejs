<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>

<body>

  <div class="container-fluid">

      <div class="row">
        <div class="col-md-12">
            <% include ../partials/header %>
          </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <h3>Creative Detail</h3>
        </div>
      </div>

      <div class="row">
      <div class="col-md-6">
        <% include ../partials/message %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">

      <% if (typeof creative != "undefined" &&  creative != "" ){ %>


        <div class="col-sm-8 form-horizontal">

           <div class="form-group">
            <label  class="col-sm-2 control-label">Id</label>
            <div class="col-sm-6">
              <div class="form-control"><%= creative.id %></div>
            </div>
          </div>


          <div class="form-group">
            <label  class="col-sm-2 control-label">Title</label>
            <div class="col-sm-6">
              <div class="form-control"><%= creative.title %></div>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Type</label>
            <div class="col-sm-6">
              <div class="form-control"><%= creative.type %></div>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Advertisers</label>
            <div class="col-sm-6">
              <div class="form-control"><%= creative.advertisers %></div>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Video Click URL</label>
            <div class="col-sm-6">
              <div class="form-control"><%= creative.video_clickthrough_url %></div>
            </div>
          </div>


          <div class="form-group">
            <label class="col-sm-2 control-label">Skip</label>
            <div class="col-sm-6">
              <div class="form-control"><%= creative.skip %></div>
            </div>
          </div>


          <div class="form-group">
            <label class="col-sm-2 control-label">Created</label>
            <div class="col-sm-6">
              <div class="form-control"><%= creative.createdDate %></div>
            </div>
          </div>


          <div class="form-group">
            <label class="col-sm-2 control-label">Updated</label>
            <div class="col-sm-6">
              <div class="form-control"><%= creative.updatedDate %></div>
            </div>
          </div>


          <div class="form-group">
            <label class="col-sm-2 control-label">User</label>
            <div class="col-sm-6">
                <% if (typeof creative.user != "undefined" && creative.user != null ){ %>
                  <a  class="form-control" href="/user/profile/<%= creative.user.id %>" ><%= creative.user.local.email %></a>
                <% } %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Process</label>
            <div class="col-sm-6 ">
                <div class="form-control">
                  <a  data-confirm="Are you sure?" data-method="DELETE" href="/creatives/destroy/<%= creative.id %>" rel="nofollow">Destroy</a>
                  -
                  <a href="/creatives/edit/<%= creative.id %>" >Edit</a> 
                </div>
            </div>
          </div>
          <hr>
          <p><a href="/creatives/">All Creates</a></p>

        </div>

      <% } %>


      </div>
    </div>

    <div class="row">
        <div class="col-md-12">
          <% include ../partials/footer %>
        </div>
    </div>

  </div>

</body>
</html>